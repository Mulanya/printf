#include <stdio.h>
#include <stdarg.h>
#include <main.h>

/**
 * _printf - Printf function
 * @format: format string
 * Return: Number of characters printed
 */
int _printf(const char *format, ...)
{
    int printed_chars = 0;
    va_list args;
    va_start(args, format);

    while (*format)
    {
        if (*format == '%')
        {
            format++; // Move past the '%'
            if (*format == '\0')
                break; // End of format string

            // Process format specifier
            switch (*format)
            {
                case 'c':
                    {
                        int c = va_arg(args, int);
                        putchar(c);
                        printed_chars++;
                        break;
                    }
                case 's':
                    {
                        char *str = va_arg(args, char *);
                        if (str != NULL)
                        {
                            while (*str)
                            {
                                putchar(*str);
                                str++;
                                printed_chars++;
                            }
                        }
                        break;
                    }
                case 'd':
                case 'i':
                    {
                        int num = va_arg(args, int);
                        printed_chars += print_int(num);
                        break;
                    }
                default:
                    putchar(*format);
                    printed_chars++;
            }
        }
        else
        {
            putchar(*format);
            printed_chars++;
        }
        format++;
    }

    va_end(args);
    return printed_chars;
}

/**
 * print_int - Print an integer (helper function)
 * @num: Integer to print
 * Return: Number of characters printed
 */
int print_int(int num)
{
    int printed_chars = 0;
    if (num < 0)
    {
        putchar('-');
        printed_chars++;
        num = -num;
    }

    int divisor = 1;
    while (num / divisor >= 10)
        divisor *= 10;

    while (divisor != 0)
    {
        int digit = num / divisor;
        putchar('0' + digit);
        printed_chars++;
        num %= divisor;
        divisor /= 10;
    }

    return printed_chars;
}

int main()
{
    _printf("Hello, %s! You have %d %s.\n", "John", 3, "apples");
    _printf("This is a character: %c\n", 'A');
    _printf("This is a number: %d\n", 42);

    return 0;
}
